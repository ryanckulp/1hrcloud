<% meta title: "Home", description: "The best hour-long Soundcloud mixes, curated daily, 100% free." %>

<div class="jumbotron">
  <h1>Programmatic SoundCloud Mixes, Curated Daily.</h1>
  <p>One Hour Cloud is an open-source algorithm that find the best hour-long sets for free.</p>.
  <div class="action-buttons">
    <button id="listen" class="btn btn-lg btn-success">Listen Now</button>
    <button class="btn btn-lg btn-default soundcloud" data-toggle="modal" data-target="#subscribeModal">Subscribe</button>
  </div>
</div>

<div id="soundcloud-widget">
</div>

<%= render "shared/subscription_modal" %>

<script>
$(function() {
  var listening = false;

  $('#listen').on('click', function(e) {
    e.preventDefault();
    if (listening != true) {
      $('#soundcloud-widget').after('<iframe width="100%" name="soundcloud" height="400px" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/250592893&amp;color=00cc11&amp;auto_play=true&amp;hide_related=true&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false"></iframe>')
      listening = true;
    }
  })
})
</script>
